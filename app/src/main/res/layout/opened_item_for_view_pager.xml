<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_above="@id/to_basket_button"
            android:id="@+id/whole_lt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardCornerRadius="16dp"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/image_inside"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:saveEnabled="false"
                        app:srcCompat="@drawable/ic_launcher_background"/>

                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:id="@+id/text_inside"/>
                    <LinearLayout
                        android:layout_marginLeft="8dp"
                        android:layout_weight="3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/weightInfo"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="aaa"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/info_button"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            app:backgroundTint="#00000000"
                            app:cornerRadius="0dp"
                            app:icon="@drawable/info_btn"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            app:rippleColor="@null"
                            app:iconTint="@color/colorAccent" />

<!--                        <Button-->
<!--                            android:id="@+id/info_button"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_gravity="center"-->
<!--                            android:layout_weight="1"-->
<!--                            android:background="#FFFFFF"-->
<!--                            app:cornerRadius="20dp"-->
<!--                            app:icon="@drawable/info_btn"-->
<!--                            app:iconPadding="0dp"-->
<!--                            app:iconTint="#FFFFFF" />-->
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:id="@+id/contains"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"/>

                <LinearLayout
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:id="@+id/group_modifier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100"/>


                <Button
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:id="@+id/bez_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:text="Убрать" />

                <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                    android:id="@+id/expandableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:ael_expanded="false"
                    app:ael_duration="200"
                    app:ael_interpolator="accelerate"
                    app:ael_orientation="vertical">

                    <TableLayout
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:id="@+id/bez_modifier"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

                <Button
                    android:id="@+id/add_button"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:clickable="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:text="Добавить" />

                <TableLayout
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:id="@+id/singled_modifier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/to_basket_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="To Basket"
            android:textAppearance="@style/MyCustomTabTextAppearance"
            app:cornerRadius="0dp" />

<!--Info Fragment-->
        <RelativeLayout
            android:alpha="0"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:layout_centerVertical="true"
            android:id="@+id/info_fragment_RL"
            android:paddingVertical="8dp"
            android:paddingHorizontal="6dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="#cf141414">

            <TextView
                android:textStyle="bold"
                android:id="@+id/info_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="pizza"
                android:textColor="@color/white" />

            <TextView
                android:layout_marginTop="2dp"
                android:id="@+id/text_nv"
                android:layout_below="@+id/info_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Пищевая ценность на 100 г"
                android:textColor="@color/white"
                android:textSize="13dp"/>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_below="@+id/text_nv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Энергетическая ценность"
                        android:textColor="@color/white" />
                    <TextView
                        android:gravity="center_vertical"
                        android:layout_weight="4"
                        android:text="0"
                        android:id="@+id/info_energy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Белки"
                        android:textColor="@color/white" />

                    <TextView
                        android:gravity="center"
                        android:layout_weight="4"
                        android:id="@+id/info_proteins"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Жиры"
                        android:textColor="@color/white" />
                    <TextView
                        android:gravity="center"
                        android:text="0"
                        android:layout_weight="4"
                        android:id="@+id/info_fats"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Углеводы"
                        android:textColor="@color/white" />
                    <TextView
                        android:gravity="center"
                        android:layout_weight="4"
                        android:text="0"
                        android:id="@+id/info_carbohydrates"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/white" />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
<!--Info Fragment-->




    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/RL"/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/go_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/back_arrow"
        android:tint="@color/colorAccent"
        android:tintMode="multiply"
        app:backgroundTint="#FFFFFF"
        app:fabCustomSize="40dp"
        app:rippleColor="@color/colorPrimaryDark"
        app:tint="#FFFFFF" />

</RelativeLayout>