<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/coordinator"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="2dp">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                app:contentScrim="@color/yellow"
                app:title="@string/app_name"
                app:expandedTitleGravity="start|bottom"
                app:expandedTitleMarginStart="16dp"
                app:expandedTitleMarginBottom="62dp"
                app:collapsedTitleGravity="center"
                app:scrimAnimationDuration="150"
                android:layout_marginBottom="-23dp"
                app:collapsedTitleTextAppearance="@style/CollapsedTitle"
                app:expandedTitleTextAppearance="@style/ExpandedTitle">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseParallaxMultiplier="0.75"
                    app:layout_collapseMode="parallax">
                    <ImageView
                        android:id="@+id/image_inside"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constrainedHeight="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:srcCompat="@drawable/ic_launcher_background"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:id="@+id/toolbar"
                    android:layout_marginBottom="23dp"
                    android:paddingBottom="39dp"
                    app:layout_collapseMode="pin"
                    android:gravity="center">
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/info_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/back_arrow"
            app:layout_anchor="@id/info_bar"
            app:layout_anchorGravity="center_vertical|end"
            android:layout_marginEnd="18dp"
            android:tintMode="multiply"
            app:backgroundTint="@color/yellow"
            app:fabCustomSize="40dp"
            app:rippleColor="@null"
            app:layout_behavior=""
            app:tint="#FFFFFF" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/whole_lt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:elevation="1dp"
            android:backgroundTint="@android:color/transparent"
            android:paddingBottom="100dp"
            android:layout_marginTop="-23dp"
            android:clipToPadding="false"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardPreventCornerOverlap="true"
                app:contentPadding="16dp"
                android:elevation="10dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="23dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/info_bar"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_marginLeft="8dp"
                            android:layout_weight="3"
                            android:paddingLeft="24dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/weightInfo"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="aaa"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"/>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/info_button2"
                                style="@style/Widget.AppCompat.Button.Borderless"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:insetTop="0dp"
                                android:insetBottom="0dp"
                                app:backgroundTint="#00000000"
                                app:cornerRadius="0dp"
                                app:icon="@drawable/info_btn"
                                app:iconGravity="textStart"
                                app:iconPadding="0dp"
                                app:rippleColor="@null"
                                app:iconTint="@color/orange" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="16dp"
                        android:id="@+id/contains"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/back_of_the_hleb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:backgroundTint="@color/lightGrey"
                        app:cardCornerRadius="23dp"
                        app:cardElevation="2dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true"
                        app:contentPadding="5dp">

                        <com.google.android.material.tabs.TabLayout
                            android:id="@+id/group_modifier"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            app:tabGravity="center"
                            app:tabIndicator="@drawable/selected_tab"
                            app:tabIndicatorColor="@color/white"
                            app:tabIndicatorFullWidth="true"
                            app:tabIndicatorGravity="stretch"
                            app:tabTextColor="@color/white"
                            app:tabSelectedTextColor="@color/middleGrey"
                            app:tabMode="fixed"
                            app:tabRippleColor="@null" />
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/with_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="23dp"
                        app:cardElevation="2dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/add_button"
                                android:clickable="false"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start|center_vertical"
                                android:text="Добавить"
                                android:layout_marginBottom="8dp"
                                android:insetTop="0dp"
                                android:insetBottom="0dp"
                                android:backgroundTint="@color/lightGrey"/>

                            <TableLayout
                                android:layout_marginHorizontal="8dp"
                                android:layout_marginTop="16dp"
                                android:id="@+id/singled_modifier"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/bez_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="23dp"
                        app:cardElevation="2dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/bez_button"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:backgroundTint="@color/lightGrey"
                                android:gravity="start|center_vertical"
                                android:insetTop="0dp"
                                android:insetBottom="0dp"
                                android:text="Убрать" />

                            <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                                android:id="@+id/expandableLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:ael_duration="200"
                                app:ael_expanded="false"
                                app:ael_interpolator="accelerate"
                                app:ael_orientation="vertical">

                                <TableLayout
                                    android:id="@+id/bez_modifier"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp" />

                            </com.github.aakira.expandablelayout.ExpandableRelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.core.widget.NestedScrollView>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/go_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/back_arrow"
            app:layout_anchor="@id/toolbar"
            app:layout_anchorGravity="bottom"
            android:tintMode="multiply"
            app:backgroundTint="@color/yellow"
            app:fabCustomSize="40dp"
            app:rippleColor="@null"
            app:tint="#FFFFFF" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/info_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        app:elevation="20dp"
        android:alpha="0"
        android:outlineSpotShadowColor="@android:color/transparent"
        android:outlineAmbientShadowColor="@android:color/transparent"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="23dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="false">

        <RelativeLayout
            android:id="@+id/info_fragment_RL"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="#D9404040"
            android:padding="16dp">

            <TextView
                android:id="@+id/info_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="pizza"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_nv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/info_name"
                android:layout_marginTop="2dp"
                android:gravity="left"
                android:text="Пищевая ценность на 100 г"
                android:textColor="@color/white"
                android:textSize="13dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_nv"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Энергетическая ценность"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/info_energy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="4"
                        android:gravity="center_vertical|right"
                        android:text="0"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Белки"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/info_proteins"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="4"
                        android:gravity="center_vertical|right"
                        android:text="0"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Жиры"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/info_fats"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="4"
                        android:gravity="center_vertical|right"
                        android:text="0"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Углеводы"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/info_carbohydrates"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:gravity="center_vertical|right"
                        android:text="0"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/RL"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="23dp"
        app:cardElevation="2dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="true"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/to_basket_button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To Basket"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:backgroundTint="@color/yellow"
                app:icon="@drawable/cart"
                android:textColor="@color/darkGrey"
                app:iconGravity="textEnd"
                app:iconPadding="16dp"
                app:iconTint="@color/darkGrey"
                app:rippleColor="@null" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>